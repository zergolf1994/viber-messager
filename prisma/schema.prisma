// prisma/schema.prisma
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum UserRole {
    ADMIN
    USER
}

model users {
    id       String   @id @default(uuid()) @map("_id")
    enable   Boolean  @default(true)
    name     String?
    email    String?  @unique
    image    String?
    password String?
    role     UserRole @default(USER)

    createdAt DateTime  @default(now())
    updatedAt DateTime?
}